# 高度権限制御システム環境変数テンプレート

# AWS設定
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Lambda関数名（高度権限制御システム）
PERMISSION_FILTER_FUNCTION_NAME=permission-aware-rag-dev-permission-filter
TIME_BASED_CHECK_FUNCTION_NAME=permission-aware-rag-dev-time-based-check
GEOGRAPHIC_CHECK_FUNCTION_NAME=permission-aware-rag-dev-geographic-check
DYNAMIC_PERMISSION_UPDATE_FUNCTION_NAME=permission-aware-rag-dev-dynamic-permission-update
AUDIT_LOG_FUNCTION_NAME=permission-aware-rag-dev-audit-log

# 権限管理API設定
PERMISSION_MANAGEMENT_API_URL=https://your-api-gateway-url/permissions
PERMISSION_CACHE_TTL=300

# 地理的位置情報API設定（オプション）
GEO_LOCATION_API_ENDPOINT=api.ipgeolocation.io
GEO_LOCATION_API_KEY=your-geo-api-key

# プロジェクト管理API設定（オプション）
PROJECT_MANAGEMENT_API_ENDPOINT=api.projectmanagement.internal
PROJECT_MANAGEMENT_API_KEY=your-project-api-key

# セキュリティ設定
SECURITY_ALERT_EMAIL=security@example.com
ENABLE_ADVANCED_PERMISSION_CONTROL=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REAL_TIME_MONITORING=true

# デバッグ設定
DEBUG_PERMISSION_CHECKS=false
LOG_LEVEL=info