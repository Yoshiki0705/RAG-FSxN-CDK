# 本番環境テスト設定例
# このファイルをコピーして .env.production として使用し、実際の値を設定してください

# AWS基本設定
AWS_REGION=ap-northeast-1
AWS_PROFILE=user01

# フロントエンド（実本番リソース）
PROD_CLOUDFRONT_DISTRIBUTION=E1234567890ABC
PROD_LAMBDA_WEB_ADAPTER=arn:aws:lambda:ap-northeast-1:123456789012:function:prod-rag-web-adapter

# 認証・セキュリティ（実本番リソース）
PROD_COGNITO_USER_POOL=ap-northeast-1_XXXXXXXXX
PROD_COGNITO_CLIENT_ID=1234567890abcdefghijklmnop
PROD_WAF_WEB_ACL=arn:aws:wafv2:ap-northeast-1:123456789012:global/webacl/prod-rag-waf/12345678-1234-1234-1234-123456789012

# AI・RAG（実本番リソース）
PROD_OPENSEARCH_DOMAIN=prod-rag-opensearch
PROD_OPENSEARCH_INDEX=documents

# データ・ストレージ（実本番リソース）
PROD_DYNAMODB_SESSION_TABLE=prod-rag-sessions
PROD_DYNAMODB_USER_TABLE=prod-rag-users
PROD_DYNAMODB_DOCUMENT_TABLE=prod-rag-documents
PROD_FSX_FILE_SYSTEM=fs-0123456789abcdef0
PROD_S3_DOCUMENTS_BUCKET=prod-rag-documents-bucket
PROD_S3_EMBEDDINGS_BUCKET=prod-rag-embeddings-bucket

# 監視・ログ（実本番リソース）
PROD_XRAY_SERVICE_MAP=prod-rag-service-map

# テスト実行設定
TEST_MAX_CONCURRENT=5
TEST_TIMEOUT=300000
TEST_RETRY_COUNT=2
TEST_MAX_DURATION=3600000

# 安全性設定（必須）
SAFETY_MODE=true
READ_ONLY_MODE=true
EMERGENCY_STOP_ENABLED=true

# 監視設定
ENABLE_REAL_TIME_MONITORING=true
METRICS_COLLECTION_INTERVAL=30000
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_RESPONSE_TIME_THRESHOLD=5000
ALERT_RESOURCE_UTILIZATION_THRESHOLD=0.8

# テストユーザー設定（本番環境の実際のテストユーザー）
TEST_USER_1_USERNAME=test-user-1
TEST_USER_1_PASSWORD=SecureTestPassword123!
TEST_USER_2_USERNAME=test-user-2
TEST_USER_2_PASSWORD=SecureTestPassword456!

# 通知設定（オプション）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/WORKSPACE_ID/CHANNEL_ID/TOKEN_ID
NOTIFICATION_EMAIL=admin@example.com